package platform.lego_nxt.example.pendulum

module without_sensors {
	source "without_sensors.c"
	depends platform.lego_nxt.drivers.motor.nxt_motor
}

module with_light_sensor {
	source "pen_light.c"
	depends platform.lego_nxt.drivers.motor.nxt_motor
	depends platform.lego_nxt.drivers.avr_init.nxt_avr_init
	depends embox.drivers.gpio.at91_pins
}

module with_angle_sensor {
	source "pen_angle.c"
	depends platform.lego_nxt.drivers.soft_i2c.soft_i2c
	depends platform.lego_nxt.drivers.sensors.angle_sensor
	depends platform.lego_nxt.drivers.motor.nxt_motor
	depends platform.lego_nxt.drivers.sensors.angle_sensor
}
