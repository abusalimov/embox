package lego_nxt.example.sensor

module touch {
	source "touch.c"
	depends platform.lego_nxt.drivers.sensors.touch_sensor
	depends platform.lego_nxt.drivers.motor.nxt_motor
}

module sensor {
	source "sensor.c"
	depends platform.lego_nxt.drivers.avr_init.nxt_avr_init
	depends embox.drivers.gpio.at91_pins
}

module light {
	source "light.c"
	depends platform.lego_nxt.drivers.avr_init.nxt_avr_init
	depends embox.drivers.gpio.at91_pins
}

module sonar {
	source "sonar.c"
	depends platform.lego_nxt.drivers.soft_i2c.soft_i2c
	depends platform.lego_nxt.drivers.sensors.sonar_sensor
}

module angle {
	source "angle.c"
	depends platform.lego_nxt.drivers.soft_i2c.soft_i2c
	depends platform.lego_nxt.drivers.sensors.angle_sensor
}
