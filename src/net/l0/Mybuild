package embox.net.l0

@DefaultImpl(net_entry)
abstract module entry_api {
}

module net_entry extends entry_api {
	option number hnd_priority = 200
	source "net_entry.c"

	depends net_rx
	depends embox.net.skbuff
	depends embox.kernel.lthread.lthread
}

module net_rx {
	source "net_rx.c"

	depends net_crypt_api
	depends embox.net.skbuff
	depends embox.net.packet
	depends embox.net.socket.af_packet_api /* make af_packet socket receive incoming packets */
	depends embox.framework.LibFrameworkNet
}

module net_tx {
	source "net_tx.c"

	depends net_crypt_api
	depends embox.net.skbuff
	depends embox.net.socket.af_packet_api /* make af_packet socket receive outcoming packets */
	depends embox.net.neighbour
}

@DefaultImpl(net_no_crypt)
abstract module net_crypt_api {
}

module net_no_crypt extends net_crypt_api {
	source "net_no_crypt.c"
}

