package embox.net.l3

module arp {
	source "arp.c"

	@NoRuntime depends embox.framework.net.pack.pack
	@NoRuntime depends embox.compat.libc.assert.assert
	@NoRuntime depends embox.compat.libc.^string.str
	@NoRuntime depends embox.net.core
	@NoRuntime depends embox.net.l0.net_tx
	@NoRuntime depends embox.net.lib.arp
	@NoRuntime depends embox.net.neighbour
	@NoRuntime depends embox.net.skbuff
}

module icmpv4 {
	source "icmpv4.c"

	depends embox.framework.net.proto.proto
	depends embox.compat.libc.assert.assert
	depends embox.net.lib.icmpv4
	depends embox.net.lib.ipv4
	depends embox.net.skbuff
}

module icmpv6 {
	source "icmpv6.c"

	depends embox.framework.net.proto.proto
	depends embox.compat.libc.assert.assert
	depends embox.compat.libc.^string.str
	depends embox.net.core
	depends embox.net.lib.icmpv6
	depends embox.net.lib.ipv6
	depends embox.net.skbuff
}

module ndp {
	source "ndp.c"

	depends embox.compat.libc.assert.assert
	depends embox.compat.libc.^string.str
	@NoRuntime depends embox.net.lib.icmpv6
	@NoRuntime depends embox.net.lib.ipv6
