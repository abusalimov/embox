package embox.net.lib

module arp {
	source "arp.c"

	@NoRuntime depends embox.compat.libc.assert.assert
	@NoRuntime depends embox.compat.libc.^string.str
}

module bootp {
	source "bootp.c"
}

module dns {
	source "dns.c"
	option string nameserver="10.0.0.11"
	option number dns_query_timeout=5000

	depends embox.compat.posix.net.socket
}

//TODO this is a Linux-BSD compatible
module getifaddrs {
	source "getifaddrs.c"
	option number amount_ifaddrs=3

	@IncludeExport
	source "ifaddrs.h"

	depends embox.mem.misc.pool
	depends embox.net.core
}

module icmpv4 {
	source "icmpv4.c"

	@NoRuntime depends embox.compat.libc.assert.assert
	@NoRuntime depends embox.compat.libc.^string.str
	@NoRuntime depends ipv4
}

module icmpv6 {
	source "icmpv6.c"

	@NoRuntime depends embox.compat.libc.assert.assert
	@NoRuntime depends embox.compat.libc.^string.str
	@NoRuntime depends ipv6
}

module ipv4 {
	source "ipv4.c"

	@NoRuntime depends embox.compat.libc.assert.assert
}

module ipv6 {
	source "ipv6.c"

	@NoRuntime depends embox.compat.libc.assert.assert
	@NoRuntime depends embox.compat.libc.^string.str
}

module ntp {
	source "ntp.c"

	depends embox.kernel.time.timekeeper
}

module pop3 {
	source "pop3.c"

	depends embox.compat.posix.net.gethostbyname
	depends embox.compat.posix.net.socket
}

module smtp {
	source "smtp.c"

	depends embox.lib.crypt.LibCrypt
	depends embox.compat.posix.net.gethostbyname
	depends embox.compat.posix.net.socket
}

module tcp {
	source "tcp.c"

	@NoRuntime depends embox.compat.libc.assert.assert
	@NoRuntime depends ipv4
	@NoRuntime depends ipv6
}

module udp {
	source "udp.c"

	@NoRuntime depends embox.compat.libc.assert.assert
	@NoRuntime depends ipv4
	@NoRuntime depends ipv6
}
