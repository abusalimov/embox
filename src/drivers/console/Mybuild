package embox.drivers.console

abstract module mpx {
}

module mpx_simple extends mpx {
	source "mpx_simple.c"

	depends embox.drivers.video.fb
	depends embox.drivers.input.core
}

module fbcon {
	source "fbcon.c"

	@IncludeExport(path="drivers/console")
	source "fbcon.h"
	@IncludeExport(path="drivers/console")
	source "mpx.h"

	depends embox.drivers.video.fonts
	depends embox.drivers.tty.vt.vterm
	depends embox.drivers.input.keyboard.keyboard
	depends mpx_simple
	depends embox.cmds.user.login //TODO why it required?

	depends embox.cmds.shell.tish
}

