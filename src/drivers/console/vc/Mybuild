package embox.driver.console.vc

module vga extends embox.drivers.diag.diag_api {
	source "vga.c"

	@IncludeExport(path="drivers/console/vc")
	source "vc_vga.h"

	depends embox.drivers.tty.vt.vterm_video
	depends embox.mem.vmem.vmem_api
}

module vc {
	source "vc.c"

	@IncludeExport(path="drivers/console/vc")
	source "vc_vga.h"

	depends vga
	depends embox.drivers.tty.vt.vterm
	depends embox.drivers.input.core
	depends embox.drivers.input.keyboard.keyboard

	depends embox.drivers.char.char_dev
}

