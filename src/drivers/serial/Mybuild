package embox.drivers.serial

/* FIXME:
 * Unused files: skyeye_uart.c
 */

abstract module serial { }

@DefaultImpl(fsnode)
abstract module fsnode_api { }

module core {
	option number uart_max_n = 4

	source "core.c"

	depends fsnode_api
	@NoRuntime depends embox.util.indexator
}

module fsnode extends fsnode_api {
	source "fsnode.c"

	@IncludeExport(path="drivers/serial")
	source "fsnode.h"

	@NoRuntime depends embox.drivers.char.char_dev
	@NoRuntime depends embox.drivers.tty.serial.serial
	depends embox.fs.driver.devfs.devfs
}

module fsnode_none extends fsnode_api {
	source "fsnode_none.c"

	@IncludeExport(path="drivers/serial")
	source "fsnode.h"
}

module diag {
	source "diag.c"

	@IncludeExport(path="drivers/serial")
	source "diag.h"
}

module apbuart extends embox.drivers.diag.diag_api {
	option number baud_rate
	option number apbuart_base=0x80000100
	option number irq_num=2

	source "apbuart.c"

	@NoRuntime depends embox.drivers.ambapp.ambapp_api

	depends core
	depends diag
}

module at91_uart extends embox.drivers.diag.diag_api {
	option number baud_rate

	source "at91_uart.c"
}

module i8250 extends serial {
	option number baud_rate

	source "8250.c"
	@IncludeExport(path="drivers/serial")
	source "8250.h"

	depends core
	depends diag
	depends embox.util.LibUtil
}

module xuartlite extends embox.drivers.diag.diag_api {
	source "xuartlite.c"

	option number xuartlite_base
	option number irq_num
}

module stm32_usart extends embox.drivers.diag.diag_api {
	option number baud_rate
	/*option boolean hw_flow = false*/

	source "stm32_usart.c"

	depends embox.drivers.gpio.stm32
	depends core
	depends diag
}

@BuildDepends(third_party.bsp.st_f4.core)
module stm_usart extends embox.drivers.diag.diag_api {
	option number baud_rate
	option number usartx=6
	/*option boolean hw_flow = false*/

	source "stm_usart.c"

	/*depends embox.driver.gpio.stm32*/
	depends core
	depends diag
	depends third_party.bsp.st_f4.core
}


@BuildDepends(platform.efm32zg_sk3200.src.bsp.bsp)
module efm32_leuart extends embox.drivers.diag.diag_api {
	option number baud_rate

	source "efm32_leuart.c"

	depends platform.efm32zg_sk3200.src.bsp.bsp
	depends core
	depends diag
}


module msp430usci extends embox.drivers.diag.diag_api {
	source "msp430usci.c"
}

module pic32mx_uart extends embox.drivers.diag.diag_api {
	source "pic32mx_uart.c"
}

module ns16550 extends embox.drivers.diag.diag_api {
	option number base_addr = 0x49020000

	source "ns16550.c"
}

module bpi extends embox.drivers.diag.diag_api {
	option number base_addr = 0x01C28000

	source "bpi_uart.c"
}
